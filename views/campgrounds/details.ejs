<% layout('./layouts/boilerplate') %>
<div class="row">
	<div class="col-6 offset-3">
		<div class="card mb-3">
			<img src="<%= image %>" class="card-img-top" alt="..." />
			<div class="card-body">
				<h5 class="card-title"><%= title %></h5>
				<p class="card-text"><%= description %></p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item text-muted"><%= location %></li>
				<li class="list-group-item">Â£<%= price %>/night</li>
			</ul>
			<div class="card-body">
				<a
					href="/campgrounds/<%= _id %>/edit"
					class="card-link btn btn-secondary"
					>Edit</a
				>
				<form
					class="d-inline"
					action="/campgrounds/<%= _id %>?_method=DELETE"
